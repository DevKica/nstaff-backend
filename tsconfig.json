{
    "compilerOptions": {
        "target": "es2015",
        "outDir": "./dist",
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": ["src/**/*", "config"]
}
